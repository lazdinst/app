<% include partials/header %>
<div class="container">
    <header class='jumbotron'>
        <div class='container'>
            <h1>Welcome</h1>
            <p>View our database of Micro Brews</p>
            <p>
                <a class='btn btn-primary btn-large' href="brews/new">Add new Microbrew</a>
            </p>
        </div>
    </header>
    <div class='row'>
        <div class='col-lg-12'>
            <h3>Our Most Popular Micro Brews!</h3>
        </div>
    </div>
    <div class='row text-center' style='display: flex; flex-wrap: wrap'>
        <% brews.forEach(function(brew){ %>
            <div class='col-md-3 col-sm-6'>
                <div class='thumbnail'>
                    <img src='<%= brew.image %>'>                    
                    <div class='caption'>
                        <h4><%= brew.name %></h4>
                    </div>
                    <p>
                        <a href="/brews/<%= brew._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div> <!-- Main Container -->
<% include partials/footer %>
